#export DEBUG := 1

export PREFIX:=

OS=$(shell uname -o)
ifeq ($(OS),GNU/Linux)
ifdef WIN32
export PREFIX:=i586-mingw32msvc-
export MINGW32:=1
endif
endif

ifeq ($(OS),Msys)
export WIN32:=1
export MINGW32:= 1
endif

ifeq ($(OS),Cygwin)
export WIN32:=1
export CYGWIN:=1
export MINGW32:= 1
endif


WARN_OPT= \
-Wall \
-W \
-Wno-unused-parameter \
-Wno-sign-compare \
-Wformat=2 \
-Wdisabled-optimization \
-Wfloat-equal \
-Wpointer-arith \
-Wdeclaration-after-statement \
-Wbad-function-cast \
-Wcast-align \
-Wredundant-decls \
-Winline

WARN_OPT2=\
-Wall \
-W \
-Wformat=2 \
-Wcast-qual \
-Wcast-align \
-Wwrite-strings \
-Wfloat-equal \
-Wpointer-arith


#INCLUDEDIR= -I../bmp -I../libpng -I../libjpeg -I../zlib -I../freegetopt


